<body>
  <style>
    header{
      margin-top: 5vh;
    }
  </style>
  <header class="d-flex justify-content-center">
    <img width="150px" src="/images/logo.png" alt="logo">
  </header>
  <main>
    <h1 class="text-center">Stock Control</h1>
    <form class="d-flex flex-column align-items-center mt-4" action="/auth/register" method="post">
      <h3 class="text-secondary">Create new account</h3>
      <input class="mt-3 text-secondary" type="text" name="firstname" id="firstname" placeholder="Full Name*" required>
      <input class="mt-3 text-secondary" type="email" name="username" id="useremail" placeholder="Email*" required>
      <input class="mt-3 text-secondary" type="password" name="password" id="password" placeholder="Password*" required>
      <input class="mt-3 text-secondary" type="password" name="password2" id="password2" placeholder="Repeat Password*" onchange="checkPassword()" required>
      <select class="mt-3 text-secondary" name="isAdmin" id="isAdmin" class="form-control" required>
          <option value=true>Admin</option>
          <option value=false >Client</option>
      </select>
      <button type="submit" class="btn btn-secondary mt-2">Sign Up</button>
      <button type="submit" class="btn bg-transparent mt-2"> <a href="/" class="text-decoration-none text-secondary">Back to Log In</a></button>
    </form>
  </main>
  <footer class="d-flex justify-content-center align-content-end mt-5">
    <%- include ('./../partials/footer') %>
  </footer>

  <!-- Boostrap scripts-->
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js" integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
